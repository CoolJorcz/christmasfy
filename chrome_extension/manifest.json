{
  "name": "Christmasfy",
  "version": "2.1",
  "homepage_url": "http://cooljorcz.github.io/christmasfy/",
  "description": "Transform any website to bring Christmas to you instantly with click events, picture replacement, and music.",
  "icons": { "48"  : "img/hat_48.png" },
  "browser_action": {
    "default_icon": "img/hat_48.png",
    "default_title": "Christmasfy"
  },
  "content_scripts": [
  	{
  		"matches": ["http://*/*", "https://*/*"],
  		"js": ["jquery.js"]
  	}
  ],

  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js", "application.js"],
    "persistent": false
  },
  "manifest_version": 2
}